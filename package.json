{
  "name": "demo-tailwind-plus",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "vite",
    "build": "npm run build:ui && tsc && vite build",
    "build:ui": "npm -w @javcb/ui run build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prepare": "husky",
    "postinstall": "node scripts/bootstrap-tailwind-plus.mjs",
    "guardrails:disable": "node scripts/guardrails-toggle.mjs off",
    "guardrails:enable": "node scripts/guardrails-toggle.mjs on",
    "guardrails:status": "node scripts/guardrails-toggle.mjs status"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.8",
    "@heroicons/react": "^2.2.0",
    "@javcb/ui": "workspace:*",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "motion": "^12.23.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  }
}
